<Window x:Class="ItemChecker.MVVM.View.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemChecker.MVVM.View"
        xmlns:viewmodel="clr-namespace:ItemChecker.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Setting" Height="330" Width="375"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        d:DataContext="{d:DesignInstance Type=viewmodel:SettingViewModel}"
        Background="{DynamicResource Background}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Normal"
        FontFamily="{materialDesign:MaterialDesignFont}"
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize">
    <Window.Resources>
        <ControlTemplate x:Key="ValidError"/>
    </Window.Resources>
    <Window.Effect>
        <DropShadowEffect Color="#FFA0A0A0">

        </DropShadowEffect>
    </Window.Effect>
    <Border BorderBrush="Gray" BorderThickness="0.5">
        <Grid Margin="10 0 10 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" MouseLeftButtonDown="Window_DragMove"
                  Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Settings" VerticalAlignment="Center" />
                <StackPanel Grid.Column="1" HorizontalAlignment="Right"
                        Orientation="Horizontal" Margin="0 0 -10 0">
                    <Button Height="25" Command="{Binding ThemeCommand}"
                            Style="{StaticResource MaterialDesignToolForegroundButton}">
                        <materialDesign:PackIcon Kind="{Binding Theme}"/>
                    </Button>
                    <Button Height="25" Style="{StaticResource MaterialDesignFlatButton}"
                            Click="Button_Close">
                        <materialDesign:PackIcon Kind="Close"/>
                    </Button>
                </StackPanel>
            </Grid>
            <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                        DataContext="{Binding Settings}">
                <TabItem Header="General" Height="54">
                    <Grid Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="130"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <GroupBox Grid.Row="0" Style="{DynamicResource None}" 
                                  Header="General">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="Currency API Key:" Height="15"/>
                                <TextBox Grid.Row="0" Grid.Column="1" ToolTip="API key of the currency server"
                                         VerticalAlignment="Center" Text="{Binding CurrencyApi}"/>
                                <Button Grid.Row="0" Grid.Column="2" ToolTip="Open services in browser"
                                        Height="25" Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Command="{Binding DataContext.GetCurrencyApiCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <materialDesign:PackIcon Kind="OpenInBrowser"/>
                                </Button>
                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="Currency:" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"
                                          ItemsSource="{Binding CurrencyList}" ToolTip="Displaying prices in tables"
                                          SelectedIndex="{Binding Currency}"/>
                                <CheckBox Grid.Row="2" Grid.Column="0" ToolTip="Close all Google Chrome proccess"
                                          Content="Exit Chrome" HorizontalAlignment="Left" 
                                          IsChecked="{Binding ExitChrome}">
                                </CheckBox>
                                <CheckBox Grid.Row="2" Grid.Column="1" ToolTip="Disable Cs.Money"
                                          Content="Guard" HorizontalAlignment="Left" 
                                          IsChecked="{Binding Guard}">
                                </CheckBox>
                            </Grid>
                        </GroupBox>
                        <GroupBox Grid.Row="1" Style="{DynamicResource None}" Header="Theme">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>                                
                                <CheckBox Grid.Row="0" Content="Set hours (Dark)"
                                          ToolTip="Automatic theme change"
                                          HorizontalAlignment="Left"
                                          IsChecked="{Binding SetHours}">
                                </CheckBox>
                                <TextBlock Grid.Row="1" Text="Turn on:" Height="15"/>
                                <materialDesign:TimePicker Grid.Row="1" Grid.Column="1" SelectedTime="{Binding TurnOn}"/>
                                <TextBlock Grid.Row="2" Text="Turn off:" Height="15"/>
                                <materialDesign:TimePicker Grid.Row="2" Grid.Column="1" SelectedTime="{Binding TurnOff}"/>
                                </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="Steam" Height="54">
                    <Grid Margin="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <GroupBox Header="Steam" Grid.Row="0"
                                  Style="{DynamicResource None}">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Steam API Key:" Height="15"/>
                                    <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding SteamApiKey, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Grid.Column="2" Height="25" ToolTip="Get API Key"
                                Style="{StaticResource MaterialDesignToolForegroundButton}" 
                                Command="{Binding DataContext.GetSteamApiCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                        <materialDesign:PackIcon Kind="GetApp"/>
                                    </Button>
                                </Grid>
                                <CheckBox Grid.Row="1" Content="Not enough balance" ToolTip="Cancel order if balance isn't enough"
                            HorizontalAlignment="Left" IsChecked="{Binding NotEnoughBalance}"/>
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="130"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Cancel order less than:" Height="15"/>
                                    <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding CancelOrder}" PreviewTextInput="Number_PreviewTextInput"/>
                                    <TextBlock Grid.Column="2" Text="%" Height="15" VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Information" Grid.Row="1"
                                  Style="{DynamicResource None}">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Account:" Height="15"/>
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{Binding Account}"/>
                                <Button Grid.Column="2" Height="25" ToolTip="Logout"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}" 
                                            Command="{Binding DataContext.LogoutCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                    <materialDesign:PackIcon Kind="Logout"/>
                                </Button>
                                <TextBlock Grid.Row="1" Text="ID64:" Height="15"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Text="{Binding SteamId}"/>
                                <Button Grid.Row="1" Grid.Column="2" Height="25" ToolTip="Copy ID"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}" 
                                            Command="{Binding DataContext.CopyIdCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                    <materialDesign:PackIcon Kind="ContentCopy"/>
                                </Button>
                                <TextBlock Grid.Row="2" Text="Market:" Height="15"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="{Binding SteamMarket}"/>
                                <Button Grid.Row="2" Grid.Column="2" Height="25" ToolTip="Open FAQ"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}" 
                                            Command="{Binding DataContext.OpenMarketCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                    <materialDesign:PackIcon Kind="OpenInNew"/>
                                </Button>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </TabItem>
                <TabItem Header="Float" Height="54">
                    <GroupBox Margin="3" Style="{DynamicResource None}" Header="Max. Float Value">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Factory New:" VerticalAlignment="Center"/>
                                <TextBlock Text="0.00 – 0.07" VerticalAlignment="Bottom" FontSize="9"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding FactoryNew}" TextInput="Decimal_PreviewTextInput" Validation.ErrorTemplate="{StaticResource ResourceKey=ValidError}"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Minimal Wear:" VerticalAlignment="Center"/>
                                <TextBlock Text="0.07 – 0.15" VerticalAlignment="Bottom" FontSize="9"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding MinimalWear}" TextInput="Decimal_PreviewTextInput" Validation.ErrorTemplate="{StaticResource ResourceKey=ValidError}"/>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Field-Tested:" VerticalAlignment="Center"/>
                                <TextBlock Text="0.15 – 0.38" VerticalAlignment="Bottom" FontSize="9"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding FieldTested}" TextInput="Decimal_PreviewTextInput" Validation.ErrorTemplate="{StaticResource ResourceKey=ValidError}"/>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Well-Worn:" VerticalAlignment="Center"/>
                                <TextBlock Text="0.38 – 0.45" VerticalAlignment="Bottom" FontSize="9"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding WellWorn}" TextInput="Decimal_PreviewTextInput" Validation.ErrorTemplate="{StaticResource ResourceKey=ValidError}"/>
                            </Grid>
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Battle-Scarred:" VerticalAlignment="Center"/>
                                <TextBlock Text="0.45 – 1.00" VerticalAlignment="Bottom" FontSize="9"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding BattleScarred}" TextInput="Decimal_PreviewTextInput" Validation.ErrorTemplate="{StaticResource ResourceKey=ValidError}"/>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </TabItem>
                <TabItem Header="Profile" Height="54">
                    <GroupBox Margin="3" Style="{DynamicResource None}" Header="Profile">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Current:" Height="15"/>
                                <ComboBox Grid.Column="1" Width="150" Height="25" HorizontalAlignment="Left"
                                     ItemsSource="{Binding DataContext.Profiles, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                                     SelectedItem="{Binding CurrentProfile}"/>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Profile Name:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" VerticalAlignment="Center" 
                                     Text="{Binding DataContext.SelectedProfile, RelativeSource={RelativeSource AncestorType=Window}}"
                                     PreviewTextInput="String_PreviewTextInput"/>
                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Height="25" Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Command="{Binding DataContext.AddProfileCommand, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                                        CommandParameter="{Binding DataContext.SelectedProfile, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <materialDesign:PackIcon Kind="Add"/>
                                    </Button>
                                    <Button Height="25" Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Command="{Binding DataContext.RemoveProfileCommand, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                                        CommandParameter="{Binding DataContext.SelectedProfile, RelativeSource={RelativeSource AncestorType=Window}}">
                                        <materialDesign:PackIcon Kind="Minus"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                            <ListBox Background="{DynamicResource ElementBackground}" Grid.Row="2"
                                 ItemsSource="{Binding DataContext.Profiles, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                                 SelectedItem="{Binding DataContext.SelectedProfile, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </GroupBox>
                </TabItem>
                <TabItem Header="About" Height="54">
                    <GroupBox Margin="3" Style="{DynamicResource None}" Header="About">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.ColumnSpan="3" HorizontalAlignment="Center" Text="ItemChecker" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Grid.Row="1" Text="Autor:" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="Current version:" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Text="Latest version:" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="8" Text="© 2018-2021" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="baht0"  VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DataContext.CurrentVersion, RelativeSource={RelativeSource AncestorType=Window}}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DataContext.LatestVersion, RelativeSource={RelativeSource AncestorType=Window}}" VerticalAlignment="Center"/>
                            <Button Grid.Row="2" Grid.Column="2" Height="25" Style="{StaticResource MaterialDesignToolForegroundButton}"
                                Command="{Binding DataContext.WhatIsNewCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                <materialDesign:PackIcon Kind="InfoOutline"/>
                            </Button>
                            <Button Grid.Row="3" Grid.Column="2" Height="25" Style="{StaticResource MaterialDesignToolForegroundButton}"
                                Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                <materialDesign:PackIcon Kind="{Binding DataContext.IsUpdate, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </Button>
                            <Button Grid.Row="8" Grid.Column="2" Height="25" Style="{StaticResource MaterialDesignToolForegroundButton}"
                                Command="{Binding DataContext.CreateCurrentVersionCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                                <materialDesign:PackIcon Kind="File"/>
                            </Button>
                        </Grid>
                    </GroupBox>
                </TabItem>
            </TabControl>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Height="25" Style="{StaticResource MaterialDesignFlatButton}"
                    Command="{Binding ApplyCommand}"
                    CommandParameter="{Binding Settings}"
                    Click="Button_Close">
                    <TextBlock Text="Apply"/>
                </Button>
                <Button Height="25" Style="{StaticResource MaterialDesignFlatButton}"
                        Click="Button_Close">
                    <TextBlock Text="Cancel"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
